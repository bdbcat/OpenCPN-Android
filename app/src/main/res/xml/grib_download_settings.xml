    <CheckBoxPreference
        android:key="GRIB_prefb_alt"
        android:title="Altitude"
        android:summary="Request Altitude data"
        android:defaultValue="false" />

    <CheckBoxPreference
        android:key="GRIB_prefb_relhum"
        android:title="RelativeHumidity"
        android:summary="Request RelativeHumidity data"
        android:defaultValue="false" />
-->

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/ocpn_grib_download_cat_waves"
        android:key="GRIB_prefcat_waves"
        >

    <CheckBoxPreference
        android:key="GRIB_prefb_waves"
        android:title="@string/ocpn_grib_download_item_waves"
        android:summary="@string/ocpn_grib_download_summary_waves"
        android:defaultValue="true" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/ocpn_grib_download_cat_sea"
        android:key="GRIB_prefcat_sea"
        >

    <CheckBoxPreference
        android:key="GRIB_prefb_current"
        android:title="@string/ocpn_grib_download_item_current"
        android:summary="@string/ocpn_grib_download_summary_current"
        android:defaultValue="false" />


    <CheckBoxPreference
        android:key="GRIB_prefb_seatemp"
        android:title="@string/ocpn_grib_download_item_seatemp"
        android:summary="@string/ocpn_grib_download_summary_seatemp"
        android:defaultValue="false" />


    </PreferenceCategory>

</PreferenceScreen>























